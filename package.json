{
  "name": "crafty-coffee",
  "version": "0.1.0",
  "scripts": {
    "fractal": "fractal start --sync",
    "build:css": "postcss src/css/styles.css -o build/css/styles.css",
    "dist:css": "postcss src/css/styles.css -o dist/css/styles.css",
    "watch": "watch 'npm run build:css' ./src/css",
    "start": "concurrently \"npm:watch\" \"npm:fractal\"",
    "dist": "fractal build && mkdir -p dist/img && cp src/img/*.jpg dist/img/"
  },
  "dependencies": {
    "@frctl/fractal": "^1.3.0",
    "@frctl/twig": "^1.2.0",
    "@tailwindcss/typography": "^0.2.0",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "tailwind": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "autoprefixer": "^9.7.4",
    "concurrently": "^5.0.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1",
    "tailwindcss": "^1.7.5",
    "watch": "^1.0.2"
  }
}
